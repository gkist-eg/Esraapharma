<odoo>
  <data>
<!-- Inherit Form View to Modify it -->
<record id="product_template_form_view" model="ir.ui.view">
    <field name="name">product.template</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="arch" type="xml">

        <xpath expr="//div[@name='pricing']" position="replace">
                                    <div groups="account.group_account_manager" name="pricing">
                                      <field name="list_price"  groups="account.group_account_manager"  class="oe_inline" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                      <button name="open_pricelist_rules" icon="fa-arrow-right" type="object" groups="account.group_account_manager" class="oe_inline">
                                        <field name="pricelist_item_count" groups="account.group_account_manager" attrs="{'invisible': [('pricelist_item_count', '=', 0)]}"/>
                                        <span groups="account.group_account_manager" attrs="{'invisible': [('pricelist_item_count', '=', 1)]}">
                                          Extra Prices
                                        </span>
                                        <span groups="account.group_account_manager" attrs="{'invisible': [('pricelist_item_count', '!=', 1)]}">
                                          Extra Price
                                        </span>
                                      </button>
                                    </div>
        </xpath>
        <xpath expr="//div[@name='standard_price_uom']" position="replace">
                                  <div name="standard_price_uom" groups="account.group_account_manager"  attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}" class="o_row">
                                        <field name="standard_price" groups="account.group_account_manager"  widget="monetary" options="{'currency_field': 'cost_currency_id', 'field_digits': True}"/>
                                        <span groups="uom.group_uom"  class="oe_read_only">per
                                            <field name="uom_name"/>
                                        </span>
                                    </div>
        </xpath>

    </field>
</record>
    <record id="view_stock_product_template_tree" model="ir.ui.view">
        <field name="name">view..tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
        <field name="arch" type="xml">

           <field name="qty_available" position="replace">
                </field>
 <field name="virtual_available" position="replace">
     <field  name="virtual_available"  invisible="1"/>
                </field>

        </field>
    </record>
    <record id="product_product_tree_view" model="ir.ui.view">
        <field name="name">view..tree.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
 <field name="standard_price" position="replace">
   <field name="standard_price" groups="account.group_account_manager"/>
 </field>
 <field name="lst_price" position="replace">
     <field  name="lst_price"  groups="account.group_account_manager" />
                </field>

        </field>
    </record>
    <record id="view_stock_product_tree" model="ir.ui.view">
        <field name="name">view..tree.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.view_stock_product_tree"/>
        <field name="arch" type="xml">
 <field name="qty_available" position="replace">
                    <field name="qty_available" groups="product_code.group_create_product"  attrs="{'invisible':[('type', '!=', 'product')]}" optional="hide" decoration-danger="virtual_available &lt; 0" decoration-warning="virtual_available == 0" decoration-bf="1"/>
 </field>
 <field name="virtual_available" position="replace">
                    <field name="virtual_available" groups="product_code.group_create_product"  attrs="{'invisible':[('type', '!=', 'product')]}" string="Forecasted Quantity" optional="hide" decoration-danger="virtual_available &lt; 0" decoration-warning="virtual_available == 0"/>
                </field>

        </field>
    </record>

     <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product template</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

     <field name="default_code"  position="replace">
            <field name="default_code" />
        </field>

              <field name="barcode"  position="after">
            <field name="man_for" />
        </field>


          <xpath expr="//page[@name='variants']" position='after'>
              <page string="Coding">
                 <group>
                        <field name="main" options="{'no_create_edit':True}"/>
                        <field name="sub11" domain="[('main_id', 'in', [main])]" options="{'no_create_edit':True}"/>
                        <field name="sub12"  domain="[('main_id1', 'in', [main])]" options="{'no_create_edit':True}"/>
                        <field name="market" attrs="{'invisible': [('name1','not in',('Primary Packaging','Secondary Packaging'))],'required': [('name1','in',('Primary Packaging','Secondary Packaging'))]} " options="{'no_create_edit':True}"/>
                        <field name="name1" invisible ='1'/>
                        <field name="is_editable" invisible ='1' ></field>
                    </group>

                    </page>
            </xpath>

        </field>
    </record>
