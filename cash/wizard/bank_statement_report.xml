<?xml version="1.0" encoding="UTF-8"?>
<odoo>
       <record id="view_valuation_bank" model="ir.ui.view">
        <field name="name">Bank Report</field>
        <field name="model">bank.statement</field>
        <field name="arch" type="xml">
        <form string="Choose your date">
            <p class="oe_gray">
                </p>
                <group>
                    <group>
                                 <field name="journal_id" options="{'no_create_edit':True,'no_open':True}"/>
                                 <field name="type_cash"  widget="radio" />
                   </group>

                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>


                    </group>
                </group>

     <footer>
                    <button name="print_pdf_bank" type="object" string="Print"  default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
        </form>


        </field>
       </record>
                <record id="action_wizard_bank" model="ir.actions.act_window">
        <field name="name">Bank Report</field>
        <field name="res_model">bank.statement</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_valuation_bank"/>
        <field name="target">new</field>
        </record>

       <record id="record_id" model="ir.actions.report">
        <field name="name">Bank Report</field>
        <field name="model">bank.statement</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">cash.bank_statement_report</field>
        </record>
        <menuitem
                id="menu_action_wizard_bank"
                              name="Bank Report"

                action="action_wizard_bank"
                sequence="2"
                parent="cash.report_cash"

        />

</odoo>
