<?xml version="1.0" encoding="UTF-8"?>
<odoo>
       <record id="view_valuation_check" model="ir.ui.view">
        <field name="name">Check Report</field>
        <field name="model">check.statement</field>
        <field name="arch" type="xml">
        <form string="Choose your date">
            <p class="oe_gray">
                </p>
                <group>
                    <group>
                                 <field name="journal_id" options="{'no_create_edit':True,'no_open':True}"/>
                                 <field name="safe_id" options="{'no_create_edit':True,'no_open':True}"/>
                                 <field name="type_cash"  widget="radio"
                                  />


                                <!--<field name="details" widget="radio" attrs="{'invisible':[('choose_partner', 'not in',('all_partner'))],}"/>-->

                        </group>

                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>


                    </group>
                </group>

              <footer>
                    <button name="print_pdf_check" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>

        </form>


        </field>
       </record>
                <record id="action_wizard_check" model="ir.actions.act_window">
        <field name="name">Check Report</field>
        <field name="res_model">check.statement</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_valuation_check"/>
        <field name="target">new</field>
        </record>

        <menuitem
                id="menu_action_wizard_check"
                              name="Check Report"

                action="action_wizard_check"
                sequence="3"
                parent="cash.report_cash"

        />

</odoo>
