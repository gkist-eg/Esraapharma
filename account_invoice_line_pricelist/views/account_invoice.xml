<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="invoice_pricelist_form" model="ir.ui.view">
        <field name="name">account.invoice.pricelist.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="pricelist_id" attrs="{'invisible':[('refund_method', '!=', 'old')]}"
                       options="{'no_create_edit': True, 'no_create':True, 'no_open':True,'no_edit': True}"/>
            </xpath>
        </field>
    </record>

</odoo><!--attrs="{'invisible':[('refund_method', '!=', 'price')]}"-->
