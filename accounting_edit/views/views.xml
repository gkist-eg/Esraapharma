<odoo>
        <record id="view_uskers_form" model="ir.ui.view">
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <group name="preferences" position="after">
                    <group string="Journal" >
                        <field name="default_journal_ids" widget="many2many_tags" />
                        <field name="default_report" widget="many2many_tags" />
                        <field name="default_account" widget="many2many_tags" />
                    </group>
                </group>
            </field>
        </record>
<record id="account_journal" model="ir.ui.view">
            <field name="name">account.journal</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
               <xpath expr="//field[@name='type']" position="after">
                    <field name="account_check"/>
                </xpath>

            </field>
        </record>


      <record id="payment_form" model="ir.ui.view">
          <field name="name">account.payment</field>
          <field name="model">account.payment</field>
          <field name="inherit_id" ref="account.view_account_payment_form"/>
          <field name="arch" type="xml">

              <xpath expr="//field[@name='ref']" position="after">
                    <field name="type"/>
                </xpath>
              <xpath expr="//field[@name='journal_id']" position="after">
                  <field name="cash_receive" attrs="{'invisible':[('type', 'not in',('cash',' '))],'required': [('type', '=', 'cash')],}" options="{'no_create_edit':True,'no_open':True}"/>
                  <field name="cash_method" attrs="{'invisible':[('type', '!=','bank'),('journal_id','!=',False)]}" widget="radio"/>
                  <field name="check_receive"  attrs="{'invisible':[('cash_method', 'not in',('Check'))],'required': [('type', '=', 'bank'),('cash_method', '=',('Check'))],}" options="{'no_create_edit':True,'no_open':True}"/>
                  <field name="check_number"  attrs="{'invisible':[('cash_method', 'not in',('Check'))],'required': [('type', '=', 'bank'),('cash_method', '=',('Check'))],}"/>
                  <field name="check_due_date"  attrs="{'invisible':[('cash_method', 'not in',('Check'))],'required': [('type', '=', 'bank'),('cash_method', '=',('Check'))],}"/>
                  <field name="safe"  attrs="{'invisible':[('cash_method', 'not in',('Check'))],'required': [('type', '=', 'bank'),('cash_method', '=',('Check'))],}" options="{'no_create':True,'no_open':True}"/>
                  <field name="bank"  attrs="{'invisible': ['|',('cash_method','&lt;&gt;','Check'), ('payment_type','&lt;&gt;','outbound')],'required': [('cash_method', '=',('Check')),('payment_type','=','outbound')]}" options="{'no_create':True,'no_open':True}"/>
                  <field name="bank_in"  attrs="{'invisible': ['|',('cash_method','&lt;&gt;','Check'), ('payment_type','&lt;&gt;','inbound')],'required': [('cash_method', '=',('Check')),('payment_type','=','inbound')]}" options="{'no_create':True,'no_open':True}"/>
                  <field name="bank_account_number"  attrs="{'invisible': ['|',('cash_method','&lt;&gt;','Check'), ('payment_type','&lt;&gt;','outbound')],'required': [('cash_method', '=',('Check')),('payment_type','=','outbound')]}" options="{'no_create':True,'no_open':True}"/>
                  <field name="bank_account"  attrs="{'invisible': ['|',('cash_method','&lt;&gt;','Check'), ('payment_type','&lt;&gt;','inbound')],'required': [('cash_method', '=',('Check')),('payment_type','=','inbound')]}" />

              </xpath>

          </field>

         </record>
    <record id="payment_register" model="ir.ui.view">
          <field name="name">account.payment.register</field>
          <field name="model">account.payment.register</field>
          <field name="inherit_id" ref="account.view_account_payment_register_form"/>
          <field name="arch" type="xml">

              <xpath expr="//field[@name='communication']" position="after">
                    <field name="type"/>
                </xpath>
              <xpath expr="//field[@name='journal_id']" position="after">
                  <field name="cash_receive" attrs="{'invisible':[('type', 'not in',('cash',' '))],'required': [('type', '=', 'cash')],}" options="{'no_create_edit':True,'no_open':True}"/>
                  <field name="cash_method" attrs="{'invisible':[('type', '!=','bank'),('journal_id','!=',False)]}" widget="radio"/>
                  <field name="check_receive"  attrs="{'invisible':[('cash_method', 'not in',('Check'))],'required': [('type', '=', 'bank'),('cash_method', '=',('Check'))],}" options="{'no_create_edit':True,'no_open':True}"/>
                  <field name="check_number"  attrs="{'invisible':[('cash_method', 'not in',('Check'))],'required': [('type', '=', 'bank'),('cash_method', '=',('Check'))],}"/>
                  <field name="check_due_date"  attrs="{'invisible':[('cash_method', 'not in',('Check'))],'required': [('type', '=', 'bank'),('cash_method', '=',('Check'))],}"/>
                  <field name="safe"  attrs="{'invisible':[('cash_method', 'not in',('Check'))],'required': [('type', '=', 'bank'),('cash_method', '=',('Check'))],}" options="{'no_create':True,'no_open':True}"/>
                  <field name="bank"  attrs="{'invisible': ['|',('cash_method','&lt;&gt;','Check'), ('payment_type','&lt;&gt;','outbound')],'required': [('cash_method', '=',('Check')),('payment_type','=','outbound')]}" options="{'no_create':True,'no_open':True}"/>
                  <field name="bank_in"  attrs="{'invisible': ['|',('cash_method','&lt;&gt;','Check'), ('payment_type','&lt;&gt;','inbound')],'required': [('cash_method', '=',('Check')),('payment_type','=','inbound')]}" options="{'no_create':True,'no_open':True}"/>
                  <field name="bank_account_number"  attrs="{'invisible': ['|',('cash_method','&lt;&gt;','Check'), ('payment_type','&lt;&gt;','outbound')],'required': [('cash_method', '=',('Check')),('payment_type','=','outbound')]}" options="{'no_create':True,'no_open':True}"/>
                  <field name="bank_account"  attrs="{'invisible': ['|',('cash_method','&lt;&gt;','Check'), ('payment_type','&lt;&gt;','inbound')],'required': [('cash_method', '=',('Check')),('payment_type','=','inbound')]}" />

              </xpath>

          </field>

         </record>



       <record id="view_move_line_tree_edit" model="ir.ui.view">
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">

            <field name="ref" position="after">
                <field name="check_number"/>
                <field name="check_due_date"/>
                <field name="cash_id" invisible="1"/>
                <field name="account_id" position="replace" >
                    <field name="account_id"  />
                </field>


            </field>

        </field>
    </record>
    <record id="view_move_line_tree_edits" model="ir.ui.view">
         <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped"/>
        <field name="arch" type="xml">

            <field name="ref" position="after">
                <field name="check_number"/>
                <field name="check_due_date"/>
                <field name="cash_id" invisible="1"/>
                <field name="account_id" position="replace" >
                    <field name="account_id"  />
                </field>


            </field>

        </field>
    </record>
      <record id="move_line_tree_cash" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority">1</field>
        <field name="arch" type="xml">

                <xpath expr="//field[@name='line_ids']//tree//field[@name='name']" position="after">
                 <field name="check_number"/>
                 <field name="check_due_date"/>
                </xpath>
<xpath expr="//field[@name='line_ids']//tree//field[@name='account_id']" position="replace">
                 <field name="account_id"/>
                </xpath>



        </field>
    </record>


</odoo>