<odoo>
    <record id="account_account_form" model="ir.ui.view">
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
              <field name="name" position="after">

                <field name="name_arab" />
            </field>
        </field>
    </record>
         <record id="account_account_tree" model="ir.ui.view">
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_list"/>
        <field name="arch" type="xml">
           <field name="name" position="after">

                <field name="name_arab" />
            </field>
        </field>
    </record>
     <record id="view_account_account_search" model="ir.ui.view">
]  <field name="model">account.account</field>
  <field name="arch" type="xml">
    <search string="Search contacts">
      <field name="name_arab"></field>
           <group expand="0" string="Group By">
              <filter string="Arabic Name" name="name_arab"></filter>
      </group>
    </search>
  </field>
</record>



</odoo>
