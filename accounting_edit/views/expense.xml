<odoo>
    <record id="view_expense_edits" model="ir.ui.view">
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">

            <field name="product_id" position="before">

                <field name="catg_id" invisible="1" options="{'no_create_edit': True, 'no_create':True, 'no_open':True}"/>
            </field>
            <xpath expr="//field[@name='unit_amount']"
                       position="attributes">
                    <attribute name="atrrs">{'readonly':[('state','in',('paid','refused'))]}</attribute>

                </xpath>

        </field>
    </record>



</odoo>