<odoo>

    <record id="report_print" model="ir.actions.report">
        <field name="name">purchase requests</field>
        <field name="model">purchase.requests</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">purchase_request.report_print_view</field>
        <field name="report_file">purchase_request.report_print_view</field>
        <field name="binding_model_id" ref="model_purchase_requests"/>
        <field name="binding_type">report</field>
         <field name="attachment">(object.name)</field>
    </record>

    <template id="report_print_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>
                            <span t-field="o.attachment_ids"/>
                        </h1>
                        <h1>
                            ffffffffffffffffff
                        </h1>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
