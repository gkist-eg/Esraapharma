<odoo>
    <data>
        <record id="view_wizard_valuation_request" model="ir.ui.view">
            <field name="name">Request at Date</field>
            <field name="model">wizard.valuation.request</field>
            <field name="arch" type="xml">
                <form string="Choose your date">
                    <p class="oe_gray"></p>
                    <group>
                        <group>
                            <field name="choose" widget="radio"/>
                            <field name="name" attrs="{'invisible':[('choose', 'not in',('eman'))],}"
                                   options="{'no_create_edit': True}"/>
                            <field name="productreq" attrs="{'invisible':[('choose', 'not in',('reqproduct'))],}"
                                   options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="date_from" required="True"/>
                            <field name="date_to" required="True"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_pdf_request" string="Print" type="object" class="btn-primary"
                                context="{'productreq':productreq,'name': name}"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_wizard_request" model="ir.actions.act_window">
            <field name="name">Purchase Request</field>
            <field name="res_model">wizard.valuation.request</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wizard_valuation_request"/>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_report" name="Purchase Reports" parent="purchase.menu_purchase_root"/>
        <menuitem id="menu_action_wizard_request" action="action_wizard_request" parent="menu_report" sequence="1"
                  groups="purchase.group_purchase_user"/>
    </data>
</odoo>