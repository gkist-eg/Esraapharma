<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_edit_sale_order_form" model="ir.ui.view">
            <field name="name">view.edit.sale.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>

                    <xpath expr="/form/sheet/notebook/page[@name='purchase_delivery_invoice']   " position="inside">
                        <group>
                            <group>
                                <field name="is_country" invisible="1"/>
                                <field name="date_planned"/>
                                <field name="ship_by"/>
                            </group>
                            <group>
                                <field name="customize_payment"/>
                                <field name="payment_terms_customized"
                                       attrs="{'invisible':[('customize_payment','=',False)],'required':[('customize_payment','=',True)]}"/>
                            </group>
                        </group>

                    </xpath>
                    <xpath expr="//form/header/button[@id='draft_confirm']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                    <xpath expr="//field[@name='user_id']" position="attributes">
                        <attribute name="readonly">1</attribute>
                    </xpath>
                    <xpath expr="//field[@name='company_id']" position="attributes">
                        <attribute name="readonly">1</attribute>
                    </xpath>


                    <xpath expr="//field[@name='partner_id']" position="after">
                        <field name="request_name" attrs="{'readonly': [('request_name', '!=', False)],'invisible': [('request_name', '=', False)]}"/>
                    </xpath>

                    <xpath expr="//field[@name='currency_id']" position="after">
                        <field name="purchase_request_ids" widget="many2many_tags"/>
                        <field name="is_order_line" invisible="1"/>
                    </xpath>

                    <xpath expr="//div[@name='date_planned_div']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>

                    <xpath expr="//div[@name='reminder']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>

                    <xpath expr="//field[@name='date_order']" position="after">
                        <field name="attachmentt_ids" widget="many2many_binary" class="oe_inline"/>
                        <field name="purchase_requests" attrs="{'readonly': [('purchase_requests', '!=', False)],'invisible': [('purchase_requests', '=', False)]}"/>
                        <field name="supplier_offer" widget="many2many_binary" class="oe_inline" required="1"/>
                        <field name="product_category_id" invisible="1" attrs="{'readonly': ['|', ('state', '!=', 'draft'), ('purchase_requests', '!=', False)]}"/>
                    </xpath>
                    <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_subtotal']"
                           position="after">
                        <field name="attachmentt_ids" widget="many2many_binary" class="oe_inline"/>
                        <field name="purchase_requests_id"/>
                        <field name="categ_id" invisible="1"/>
                        <field name="purchase_request_line" widget="many2many_tags" invisible="1" />
                    </xpath>
                    <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                        <attribute name="domain">[('categ_id', '=', categ_id)]</attribute>
                    </xpath>
                    <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_unit']"
                           position="after">
                        <field name="last_price_purchase"/>
                        <field name="last_date_purchase"/>
                    </xpath>

                </data>
            </field>
        </record>
    </data>
</odoo>


