<odoo>
    <data>
        <record id="id_purchase_request_line_tree" model="ir.ui.view">
            <field name="name">purchase.request.line.tree</field>
            <field name="model">purchase.request.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="origin"/>
                    <field name="name" invisible="1"/>
                    <field name="requested_by_id"/>
                    <field name="approver_id"/>
                    <field name="product_id"/>
                    <field name="product_qty"/>
                    <field name="ordered_qty"/>
                    <field name="m_qty"/>
                    <field name="supply_chain_qty"/>
                    <field name="product_uom_id"/>
                    <field name="request_date"/>
                    <field name="due_date"/>
                    <field name="request_category_id" />
                    <field name="attachment_ids"/>
                    <field name="note"/>
                    <field name="request_state"/>
                </tree>
            </field>
        </record>


        <record id="id_purchase_request_line_pivot" model="ir.ui.view">
        <field name="name">purchase.request.line.pivot</field>
        <field name="model">purchase.request.line</field>
        <field name="arch" type="xml">
                <pivot>
                    <field name="product_id" type="row"/>
                    <field name="product_qty" type="measure" />
                    <field name="ordered_qty" type="measure"/>
                    <field name="m_qty" type="measure"/>
                    <field name="supply_chain_qty" type="measure"/>
                    <field name="product_uom_id"/>

                </pivot>
        </field>
        </record>


        <record id="id_purchase_request_line_form" model="ir.ui.view">
            <field name="name">purchase.request.line.form</field>
            <field name="model">purchase.request.line</field>
            <field name="arch" type="xml">
                <form string="Purchase Request Line" edit="0">
                    <sheet >
                        <group>
                            <field name="request_line_id" invisible="1"/>
                            <field name="product_id" />
                            <field name="name"/>
                            <field name="product_qty"  attrs="{'readonly':[('request_state','!=','draft')]}" force_save="1"/>
                            <field name="ordered_qty" attrs="{'readonly':[('request_state','!=','to_be_approved')]}" force_save="1"/>
                            <field name="m_qty" attrs="{'readonly':[('request_state','!=','leader_approved')]}" force_save="1"/>
                            <field name="supply_chain_qty" invisible="1"/>
                            <field name="product_uom_id"/>
                            <field name="request_date"/>
                            <field name="due_date"/>
                            <field name="attachment_ids" widget="many2many_binary" class="oe_inline"/>
                            <field name="note"/>
                            <field name="request_category_id" />
                            <field name="state" />
                            <field name="category_uom_id" invisible="1" />
                            <field name="request_state" invisible="1" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="id_purchase_request_line_search" model="ir.ui.view">
            <field name="name">purchase.request.line.search</field>
            <field name="model">purchase.request.line</field>
            <field name="arch" type="xml">
                <search string="Search Purchase Request">
                    <field name="name"/>
                    <field name="origin"/>
                    <field name="nname"/>
                    <field name="product_id"/>
                    <field name="product_qty"/>
                    <field name="ordered_qty"/>
                    <field name="m_qty"/>
                    <field name="request_category_id"/>
                    <field name="product_uom_id"/>
                </search>
            </field>
        </record>

        <record id="id_purchase_request_line_form_action" model="ir.actions.act_window">
            <field name="name">Done Items</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.request.line</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="domain">[('request_state','in', ('request_approved', 'fully_quotationed'))]</field>


        </record>

      <record id="model_purchase_request_line_action_generate" model="ir.actions.server">
        <field name="name">Generate</field>
        <field name="model_id" ref="model_purchase_request_line"/>
        <field name="binding_model_id" ref="model_purchase_request_line"/>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.get_description_default()
        </field>
    </record>
        <menuitem
                id="menu_purchase_request_line_action"
                sequence="-1"
                parent="id_purchase_requsts_view_menu"
                action="id_purchase_request_line_form_action"
        />
    </data>

</odoo>
