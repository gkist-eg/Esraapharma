                                            <td style="border: 1px solid black;">
                                                <span style="float:left;" t-esc="snln_line['product_name']" />
                                            </td>
                                            <td class="text-center" style="border: 1px solid black;">
                                                <span style="float:left;" t-esc="snln_line['uom_name']" />

                                            </td>
