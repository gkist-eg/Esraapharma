<odoo>

     <record id="invoice_refund" model="ir.ui.view">
          <field name="name">Refund</field>
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_move_form"/>
          <field name="arch" type="xml">
                   <xpath expr="//field[@name='partner_id']" position="after">
                      <field name="refund_method"  readonly='1' attrs="{'invisible':[('move_type','not in',('out_refund'))]}" />
                      <field name="invoice_number" attrs="{'invisible':[('refund_method', '!=', 'invoice')],'required':[('refund_method', '=', 'invoice')]}"
                             domain="[('move_type','=','out_invoice'), ('state', '=', 'posted'), ('partner_id', 'in', [partner_id])]"
                             options="{'no_create_edit': True, 'no_create':True, 'no_open':True,'no_edit': True}"
                    />
                        <field name="invoice_number_old"
                           attrs="{'invisible':[('refund_method', '!=', 'old')],
                           'required':[('refund_method', '=', 'old')],'readonly':[('state','=','posted')]}"/>
                       <field name="pricelist_id"
                           attrs="{'invisible':[('refund_method', '!=', 'old')],
                           'required':[('refund_method', '=', 'old')],'readonly':[('state','=','posted')]}"/>
 <field name="cash_discount" invisible="1"
                           />
 <field name="dist_discount" invisible="1"
                        />

              </xpath>



          </field></record>

     <record id="invoice_discountt" model="ir.ui.view">
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_move_form"/>
          <field name="arch" type="xml">

 <xpath expr="//field[@name='amount_untaxed']" position="after">
<field name="pharm_discount_totals" attrs="{'invisible':[('move_type','not in',('out_refund','out_invoice'))]}" />
<field name="cash_discount_totals" attrs="{'invisible':[('move_type','not in',('out_refund','out_invoice'))]}"/>
<field name="dist_discount_totals" attrs="{'invisible':[('move_type','not in',('out_refund','out_invoice'))]}"/>
<field name="discount_totals" attrs="{'invisible':[('move_type','not in',('out_refund','out_invoice'))]}"/>
 </xpath>
              <xpath expr="//field[@name='invoice_line_ids']//tree/field[@name='price_unit']" position="after">
                  <field name="pharmacy_discount" invisible="1" />

              </xpath> <xpath expr="//field[@name='invoice_line_ids']//tree/field[@name='price_unit']" position="after">
                  <field name="lot_id" />

              </xpath>
          </field>
     </record>
</odoo>