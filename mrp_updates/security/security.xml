<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <record model="ir.module.category" id="module_category_production">
        <field name="name">Production</field>
        <field name="description">Helps you request stock Items.</field>
        <field name="sequence">8</field>
    </record>

    <record id="group_production_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_production"/>
    </record>
    <record id="group_production_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4, ref('mrp_updates.group_production_user'))]"/>
        <field name="category_id" ref="module_category_production"/>
    </record>

      <record id="filter_user_group_production_user" model="ir.rule">
            <field name="name">Filter work Center</field>
            <field name="model_id" search="[('model','=','mrp.workcenter')]" model="ir.model"/>
            <field name="groups" eval="[(4, ref('group_production_user'))]"/>
            <field name="domain_force">[('user_ids','in',user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
      <record id="filter_user_group_production_manager" model="ir.rule">
            <field name="name">Filter work Center</field>
            <field name="model_id" search="[('model','=','mrp.workcenter')]" model="ir.model"/>
            <field name="groups" eval="[(4, ref('group_production_manager'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
</data>
</odoo>