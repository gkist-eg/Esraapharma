<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="mrp_workcenter_view_user" model="ir.ui.view">
        <field name="name">mrp.workcenter</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='general_info']" position="after">
               <page string="Allowed Users" name="user_info">
                   <group>
                                          <field name="user_ids"  widget="many2many_tags"/>

                   </group>
                            </page>
            </xpath>

        </field>
    </record>
     <template id="report_mrporder_inherit" inherit_id="mrp.report_mrporder">
            <xpath expr="//div[@class='row mt32 mb32']" position="inside">


                <div t-if="o.batch" class="col-auto" name="batch">
                            <strong>Batch Number:</strong>
                            <p t-field="o.batch"/>
                        </div>


            </xpath>
         <xpath expr="//div[@class='row mt32 mb32'][2]" position="replace">
                 <br/>
                <div t-if="o.move_finished_ids">
                        <h5>Finished Product</h5>
                        <table class="table table-condensed">
                            <tr>
                                <td class="text-center"><strong>Product Code</strong></td>
                                <td class="text-center"><strong>Product Name</strong></td>
                                <td class="text-center"><strong>Quantity</strong></td>
                            </tr>
                            <tr t-foreach="o.move_finished_ids" t-as="f">
                                <td class="text-center"><span t-field="f.product_id.default_code"/></td>
                                <td class="text-center"><span t-field="f.product_id.name"/></td>
                                <td class="text-center"><span t-field="f.product_qty"/><span t-field="f.product_uom"/></td>
                            </tr>
                        </table>
                    </div>

            </xpath>
            </template>



</odoo>