<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_users_form_signature" model="ir.ui.view">
            <field name="name">view.users.form.signature</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <group name="messaging" position="inside">
                        <field name="segimage" widget="image"  class="oe_avatar" options="{'size': [90, 90]}"/>

                </group>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="view_company_form" model="ir.ui.view">
            <field name="name">Stamp</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='website']" position="after">

                        <field name="stamp" widget="image"  class="oe_avatar" options="{'size': [90, 90]}"/>

                </xpath>

            </field>
        </record>
    </data>
</odoo>