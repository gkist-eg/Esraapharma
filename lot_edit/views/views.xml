<odoo>
  <data>
  <record id="stock_production_lot_edit" model="ir.ui.view">
            <field name="name">stock.production.lot.edit_form</field>
            <field name="model">stock.production.lot.edit</field>
            <field name="arch" type="xml">
                <form string="Generate Double Visit">
                    <p class="oe_grey">
                        Approve PLan Visit
                    </p>
                    <footer>
                   <field name="qc_attach"  />
                    </footer>
                </form>
            </field>
        </record>
    <record id="qc_attach" model="ir.actions.act_window">
            <field name="name">Approve</field>
            <field name="res_model">stock.production.lot.edit</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_production_lot_edit"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="stock.model_stock_production_lot" />
            <field name="binding_view_types">list</field>
        </record>



  </data>
</odoo>