<odoo>
    <data>

        <record id="lot_form" model="ir.ui.view">
            <field name="name">stock.production.lot</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="inventory_update.view_move_form_expiry_production"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='attachment_ids']" position="after">
                    <field name="attachment_qc" widget="many2many_binary"
                           force_save="1"/>
                </xpath>

            </field>
        </record>



        <record model="ir.ui.view" id="action_view_demo">

        <field name="name">stock.production.lot</field>

        <field name="model">stock.production.lot</field>

        <field name="arch" type="xml">

        <form string="Demo Form">

        <header>

             <field name="attachment_qc" widget="many2many_binary"
                           force_save="1"/>
        </header>
        </form>
        </field>
        </record>
    </data>
</odoo>