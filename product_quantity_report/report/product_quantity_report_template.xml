<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="product_quantity_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <h4 class="text-center" style="font-weight: bold;">
                            Product Quantity Report
                        </h4>
                        <div>
                            <!--                                    <span>Warehouse :</span>-->
                            <!--                                    <span t-esc="o.stock_warehouse.display_name"/>-->
                            <div class="pull-right">
                                <h4>
                                    <span>Date From :</span>
                                    <span t-esc="o.start_date"/>
                                    <span>Date To :</span>
                                    <span t-esc="o.end_date"/>
                                </h4>
                            </div>
                            <div>
                                <h4>
                                    <span>Location :</span>
                                    <span t-esc="o.stock_location.display_name"/>
                                </h4>
                            </div>
                        </div>
                        <table border="2" class="table table_bordered">
                            <thead>
                                <thead2 border="2">
                                    <th border="2" style="page-break-inside: avoid;">ID</th>
                                    <th border="2" style="page-break-inside: avoid;">Product
                                    </th>
                                    <th border="2" style="page-break-inside: avoid;">Start
                                        Balance
                                    </th>
                                    <th border="2" style="page-break-inside: avoid;">InCome
                                    </th>
                                    <th border="2" style="page-break-inside: avoid;">OutCome
                                    </th>
                                    <th border="2" style="page-break-inside: avoid;">Current
                                        Balance
                                    </th>
                                </thead2>
                            </thead>
                            <tbody>
                                <t t-foreach="o.line_ids" t-as="stock_move">
                                    <tr style="page-break-inside: avoid;">
                                        <td border="2">
                                            <t style="page-break-inside: avoid;"
                                               t-esc="stock_move.product_id.default_code"/>
                                        </td>
                                        <td border="2">
                                            <t style="page-break-inside: avoid;"
                                               t-esc="stock_move.product_id.name"/>
                                        </td>
                                        <td border="2">
                                            <t style="page-break-inside: avoid;"
                                               t-esc="stock_move.start_balance"/>
                                        </td>
                                        <td border="2">
                                            <t style="page-break-inside: avoid;"
                                               t-esc="stock_move.income_quantity"/>
                                        </td>
                                        <td border="2">
                                            <t style="page-break-inside: avoid;"
                                               t-esc="stock_move.outcome_quantity"/>
                                        </td>
                                        <td border="2">
                                            <t style="page-break-inside: avoid;"
                                               t-esc="stock_move.end_balance"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div>
                            <h4>
                                <span>Printed by :</span>
                                <span t-esc="o.user.display_name"/>
                                <div class="pull-right">
                                    <span>
                                        Print Date :
                                    </span>
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                                </div>
                            </h4>
                        </div>
                        <div class="footer">
                            <div class="text-center">
                                <span>Page</span>
                                <span class="page"/>
                                of
                                <span class="topage"/>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>