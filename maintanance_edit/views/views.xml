<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="equipment_brand_form">
      <field name="name">equipment.brand</field>
      <field name="model">equipment.brand</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>

        </tree>
      </field>
    </record>

      <record id="equipment_brand_tree" model="ir.ui.view">
        <field name="model">equipment.brand</field>
        <field name="arch" type="xml">
            <tree string="Brand">
                        <field name="name"/>
            </tree>
        </field>
    </record>


 <record id="equipment_brand_action" model="ir.actions.act_window">
        <field name="name">Brand</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">equipment.brand</field>
        <field name="view_mode">tree,form</field>

    </record>
 <record id="Maintance_edit" model="ir.ui.view">
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                  <xpath expr="//field[@name='category_id']" position="after">
                    <field name="brand" />
                </xpath>
            </field>
 </record>
<record id="Maintance_edit_tree" model="ir.ui.view">
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_tree"/>
            <field name="arch" type="xml">
                  <xpath expr="//field[@name='category_id']" position="after">
                    <field name="brand" />
                </xpath>
            </field>
 </record>

    <menuitem name="Equipment Brand" id="equipment_brand_action_menu" parent="maintenance.menu_maintenance_configuration"
              action="equipment_brand_action"/>

  </data>
</odoo>