<odoo>
    <data>

        <record model="ir.ui.view" id="equipment_transfer_form">
            <field name="name">equipment.transfer</field>
            <field name="model">equipment.transfer</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,send,receive"
                               statusbar_colors='{"approved":"blue"}'/>
                        <button name="button_send"
                                string="Send"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"
                        />
                        <button name="button_receive"
                                string="Receive"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('can_leader_approved', '=', False)]}"

                        />
                    </header>
                    <sheet>

                        <group>
                            <group>

                                <field name="company_id" readonly="1"/>
                                <field name="employee_id" readonly="1"/>

                                <field name="equipment" attrs="{'readonly':[('state','=','send')]}"/>
                                <field name="from_user" force_save="1"/>
                                <field name="employee" force_save="1"/>
                                <field name="date" attrs="{'readonly':[('state','=','send')]}"/>
                                <field name="file_attach" attrs="{'readonly':[('state','=','send')]}"/>
                                                                <field name="to_user" readonly="1" force_save="1"/>

                                <field name="department_id"/>
                                <field name="can_leader_approved" invisible="1"/>
                            </group>
                            <group>

                                <field name="brand" readonly="1"/>
                                <field name="model" readonly="1"/>
                                <field name="serial_no" readonly="1"/>
                                <field name="note" readonly="1"/>
                                <field name="assign_date" readonly="1"/>

                            </group>

                        </group>
                    </sheet>


                </form>
            </field>
        </record>

        <record id="equipment_transfer_tree" model="ir.ui.view">
            <field name="model">equipment.transfer</field>
            <field name="arch" type="xml">
                <tree string="Equipment Transfer">
                    <field name="equipment"/>
                    <field name="from_user"/>
                    <field name="employee"/>
                    <field name="department_id"/>
                    <field name="to_user"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>


        <record id="equipment_transfer_action" model="ir.actions.act_window">
            <field name="name">Equipment Transfer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">equipment.transfer</field>
            <field name="view_mode">tree,form</field>

        </record>


        <menuitem name="Equipment Transfer" id="equipment_transfer_action_menu"
                  parent="maintenance.menu_equipment_form"
                  action="equipment_transfer_action"/>

    </data>
</odoo>