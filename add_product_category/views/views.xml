<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_edit_sale_order_form" model="ir.ui.view">
            <field name="name">view.edit.sale.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='date_order']" position="after">
                        <field name="product_category_id" attrs="{'readonly': ['|',('state', '!=', 'draft'),('is_order_categ', '!=', False)]}"/>
                        <field name="is_order_categ" invisible="1"/>
                    </xpath>
                    <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_subtotal']"
                           position="after">
                        <field name="categ_id" invisible="1"/>
                    </xpath>
                    <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']"
                           position="attributes">
                        <attribute name="domain">[('categ_id', '=', categ_id)]</attribute>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
