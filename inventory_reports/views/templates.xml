<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <template id="item_quantity_report">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                        <h2>Item Sheet - Quantities</h2>
                        <div class="row mt32 mb32">
                            <div class="col-xs-6">
                                  <span style ='width:100%'>Product: </span><sapn t-field="o.product_id"/><br/>
                                <span>Location: </span><sapn t-field="o.location_id"/>
                            </div>
                            <div class="col-xs-6">

                                  <span>Date From : </span><sapn t-field="o.date_from"/><br/>
                                <span>Date To: </span><sapn t-field="o.date_to"/>
                            </div>
                        </div>
                    <div class="col-xs-6 pull-right">
                           <span>Start Balance : </span>  <span t-field="o.qty"></span>
                        </div>
                        <table class="table table-condensed">
                            <thead>
                            <tr>
                                <th>Referance</th>
                                <th>Date</th>
                                <th>Lot</th>
                                <th>Batch</th>
                                <th>Income Qty</th>
                                <th>Outgoing Qty</th>
                                <th>Balance</th>
                                <th>Desc</th>
                                <th>kind</th>
                                <th  t-if="o.product_id.purchase_ok == True">Product</th>

                            </tr>
                            </thead>
                            <tbody>
                            <t t-foreach="o.line_ids" t-as="l">
                                <tr>
                                    <td><span t-esc="l.name"/></td>
                                    <td><span t-esc="l.date"/></td>
                                    <td><span t-esc="l.lot_id.name"/></td>
                                    <td><span t-esc="l.batch_no"/></td>
                                    <td><span t-esc="l.in_qty" /></td>
                                    <td><span t-esc="l.out_qty" /></td>
                                    <td><span t-esc="l.balance" /></td>
                                    <td>
                                        <span t-if="not l.partner_id" t-esc="l.dest_location.name" />
                                        <span t-if="l.partner_id" t-esc="l.partner_id.name" />
                                    </td>
                                      <td><span t-esc="l.picking_id.picking_type_id.name"/></td>
                                      <td t-if="o.product_id.purchase_ok == True"><span t-esc="l.product_id.name"/></td>
                                </tr>
                            </t>
                            </tbody>
                        </table>
                     <div class="col-xs-6 pull-right">
             <span>End Balance : </span>        <span t-field="o.end_qty"></span>
                        </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </t>
    </template>
     <report
            id="action_partner_report"
            model="stock.wizerd.quantity"
            string="Item Quantity"
            menu="False"
            report_type="qweb-pdf"
            name="inventory_reports.item_quantity_report"
            file="inventory_reports.item_quantity_report"
        />
</odoo>