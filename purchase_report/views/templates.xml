<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="pr_followup_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="header">
                    <div class="row mt8 mb8">
                    </div>
                    <div class="row zero_min_height">
                        <div class="col-xs-12">
                            <div style="border-bottom: 1px solid black;"/>
                        </div>
                    </div>

                    <div class="oe_structure"/>
                    <h2 class="text-center">PRs Follow Up Report</h2>
                    <div class="row mt32 mb32">
                        <div class="col-xs-6">
                            <span t-if="o.choose == 'department'">Department:</span>
                            <span t-field="o.department"/>
                            <span t-if="o.choose == 'product'">Product:</span>
                            <span t-field="o.product"/>
                        </div>
                        <div class="col-xs-6">
                            <p>
                                <span class="text-right">Date From:</span>
                                <sapn t-field="o.date_from"/>
                                <span class="text-right">To:</span>
                                <sapn t-field="o.date_to"/>
                            </p>
                        </div>
                    </div>

                </div>
                <div class="page">

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>PR No</th>
                                <th>PR Date</th>
                                <th>PR State</th>
                                <th t-if="o.choose == 'department'">Product Code</th>
                                <th t-if="o.choose == 'department'">Product</th>
                                <th t-if="o.choose == 'product'">Requesting Department</th>
                                <th t-if="o.choose_from == 'all'">Product Code</th>
                                <th t-if="o.choose_from == 'all'">Product</th>
                                <th t-if="o.choose_from == 'all'">Requesting Department</th>
                                <th>Requested Qty</th>
                                <th>Received Qty</th>
                                <th>Received Date</th>
                                <th>Back Order</th>
                                <th>Back Order Qty</th>
                                <th>PO.No</th>


                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.line_ids" t-as="l">
                                <tr>
                                    <td>
                                        <span t-esc="l.pr_no"/>
                                    </td>
                                    <td>
                                        <span t-esc="l.pr_date"/>
                                    </td>
                                    <td>
                                        <span t-field="l.state"/>
                                    </td>
                                    <td t-if="o.choose == 'department'">
                                        <span t-esc="l.product_code"/>
                                    </td>
                                    <td t-if="o.choose == 'department'">
                                        <span t-esc="l.product_id.name"/>
                                    </td>
                                    <td t-if="o.choose == 'product'">
                                        <span t-esc="l.requesting_department.name"/>
                                    </td>
                                    <td t-if="o.choose_from == 'all'">
                                        <span t-esc="l.product_code"/>
                                    </td>
                                    <td t-if="o.choose_from == 'all'">
                                        <span t-esc="l.product_id.name"/>
                                    </td>
                                    <td t-if="o.choose_from == 'all'">
                                        <span t-esc="l.requesting_department.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="l.requested_qty"/>
                                    </td>
                                    <td>
                                        <span t-esc="l.qty_received"/>
                                    </td>
                                    <td>
                                        <span t-esc="l.received_date"/>
                                    </td>
                                    <td>
                                        <span t-esc="l.backorder_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="l.product_uom_qty"/>
                                    </td>
                                    <td>
                                        <span t-esc="l.po"/>
                                    </td>

                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div class="oe_structure"/>
                </div>

            </t>
        </t>

    </template>
    <template id="po_followup_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="header">
                    <div class="row mt8 mb8">
                    </div>
                    <div class="row zero_min_height">
                        <div class="col-xs-12">
                            <div style="border-bottom: 1px solid black;"/>
                        </div>
                    </div>

                    <div class="oe_structure"/>
                    <h2 class="text-center">PO Follow Up Report</h2>
                    <div class="row mt32 mb32">
                        <div class="col-xs-6">
                            <span t-if="o.choose == 'vendor'">Vendor:</span>
                            <span t-field="o.vendor"/>
                            <span t-if="o.choose == 'product'">Product:</span>
                            <span t-field="o.product"/>
                            <span t-if="o.choose == 'po'">PO:</span>
                            <span t-field="o.purchase"/>

                        </div>
                        <div class="col-xs-6">
                            <p>
                                <span class="text-right">Date From:</span>
                                <sapn t-field="o.date_from"/>
                                <span class="text-right">To:</span>
                                <sapn t-field="o.date_to"/>
                            </p>
                        </div>
                    </div>

                </div>
                <div class="page">

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>PO No</th>
                                <th>PO Date</th>
                                <th t-if="o.choose in ( 'vendor','purchase')">Product Code</th>
                                <th t-if="o.choose in ( 'vendor','purchase')">Product</th>
                                <th t-if="o.choose in ( 'product','purchase')">vendor</th>
                                <th t-if="o.choose_from == 'all'">Product Code</th>
                                <th t-if="o.choose_from == 'all'">Product</th>
                                <th>Requested Qty</th>
                                <th>Received Qty</th>
                                <th>Received Date</th>
                                <th>Back Order</th>
                                <th>Back Order Qty</th>


                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.line_ids" t-as="l">
                                <tr>
                                    <td>
                                        <span t-esc="l.pr_no"/>
                                    </td>
                                    <td>
                                        <span t-esc="l.pr_date"/>
                                    </td>

                                    <td t-if="o.choose in ('vendor','purchase')">
                                        <span t-esc="l.product_code"/>
                                    </td>
                                    <td t-if="o.choose in ('vendor','purchase')">
                                        <span t-esc="l.product_id.name"/>
                                    </td>
                                    <td t-if="o.choose in ('product','purchase')">
                                        <span t-esc="l.vendor.name"/>
                                    </td>


                                    <td t-if="o.choose_from == 'all'">
                                        <span t-esc="l.product_code"/>
                                    </td>
                                    <td t-if="o.choose_from == 'all'">
                                        <span t-esc="l.product_id.name"/>
                                    </td>

                                    <td>
                                        <span t-esc="l.requested_qty"/>
                                    </td>
                                    <td>
                                        <span t-esc="l.qty_received"/>
                                    </td>
                                    <td>
                                        <span t-esc="l.received_date"/>
                                    </td>
                                    <td>
                                        <span t-esc="l.backorder_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="l.product_uom_qty"/>
                                    </td>

                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <div class="oe_structure"/>
                </div>

            </t>
        </t>

    </template>

    <report
            id="pr_followup_report_id"
            model="pr.followup"
            string="PRs Follow up"
            menu="False"
            report_type="qweb-pdf"
            name="purchase_report.pr_followup_report"
            file="purchase_report.pr_followup_report"
    />
    <report
            id="po_followup_report_id"
            model="po.followup"
            string="PO Follow up"
            menu="False"
            report_type="qweb-pdf"
            name="purchase_report.po_followup_report"
            file="purchase_report.po_followup_report"
    />

</odoo>